{{ header }}
{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
    </div>
  </div>
  <div class="container-fluid">

      <div style="width: 50%; margin: 0 auto;">
          <form action="{{ form_action }}" method="post">

              <div class="form-group">
                  <label for="urlOem">URL OEM</label>
                  <input class="form-control" type="text" name="url_oem" id="urlOem" value="{{ url_oem }}" placeholder="URL OEM">
              </div>

              <div class="form-group">
                  <label for="urlOem">URL AM</label>
                  <input class="form-control" type="text" name="url_am" id="urlAm" value="{{ url_am }}" placeholder="URL AM">
              </div>

              <div class="form-group">
                  <label for="login">Login</label>
                  <input class="form-control" type="text" name="login" id="login" value="{{ login }}" placeholder="Login">
              </div>

              <div class="form-group">
                  <label for="password">Password</label>
                  <input class="form-control" type="text" name="password" id="password" value="{{ password }}" placeholder="Password">
              </div>

              <div class="form-group">
                  <input type="submit" class="btn btn-primary" style="width: 100%;" name="submit" value="Обновить">
              </div>

          </form>
      </div>

  </div>
</div>


{{ footer }}
