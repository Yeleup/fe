{{ header }}
{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
        </div>
    </div>
    <div class="container-fluid">

        <div style="width: 50%; margin: 0 auto;">
            <form action="{{ action }}" method="post">
                <div class="form-group">
                    <textarea class="form-control" name="file_content" rows="24" cols="120">{{ file_content }}</textarea>
                </div>

                <div>
                    <pre>{{ file_content_regex }}</pre>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" style="width: 100%;" type="submit" name="submit" value="Submit">
                </div>
            </form>
        </div>

    </div>
</div>


{{ footer }}
