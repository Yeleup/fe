<div class="container">
    <div class="row mt-5">
        <div class="col-6">
            <h4>Способ оплаты</h4>
            {% if showPaymentCard %}
            <div class="form-check">
                <input type="radio" class="form-check-input" name="payment_option" id="paymentOptionJetpay" value="jetpay" required>
                <label class="form-check-label" for="paymentOptionJetpay">Оплата картой</label>
            </div>
            {% endif %}

            {% if showPaymentReserve %}
            <div class="form-check">
                <input type="radio" class="form-check-input" name="payment_option" id="paymentOptionNone" value="reserve" required>
                <label class="form-check-label" for="paymentOptionNone">Резерв</label>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h4>Комментарий</h4>
            <textarea class="form-control" name="comment" rows="5" placeholder="Комментарий"></textarea>
        </div>

    </div>

    <div class="row justify-content-end p-4">
        <div class="col-3">
            <button class="btn fe-btn-bordered w-100" id="checkoutBtnPaymentBack" type="button" name="button">Назад</button>
            <script type="text/javascript">
                $(document).ready(() => {
                    $('#checkoutBtnPaymentBack').click(() => {
                        new bootstrap.Tab($('#pills-delivery-tab')).show();
                    });
                });
            </script>
        </div>
        <div class="col-3">
            <button type="button" class="btn fe-btn-bordered w-100" id="checkoutBtnDeliverySubmit" name="button" data-bs-toggle="modal" data-bs-target="#feCheckoutAlarm">Оплатить</button>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(() => {
            // Check for payment option change
            $('input[name=payment_option]').on('change', function() {
                let payment_type = $('input[name=payment_option]:checked').val();
                if (payment_type == 'reserve') {
                    $('#checkoutBtnDeliverySubmit').html('Оформить');
                } else {
                    $('#checkoutBtnDeliverySubmit').html('Оплатить');
                }
            });
        });
    </script>
</div>
