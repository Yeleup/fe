<div class="modal fade" id="modalPasswordRecovery" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">

                <div class="container">
                    <div class="text-end p-1">
                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="text-center">
                        <span class="btn rounded-0 fw-bolder w-75" style="background: #0575C0; color: white; cursor: default;">
                            Восстановление пароля
                        </span>
                    </div>

                    <div>
                        <form action="{{ action }}" method="post">
                            <div class="py-3 px-5">
                                <label for="email" class="form-text">Email<span class="text-danger">*</span></label>
                                <input id="email" class="form-control rounded-0" type="text" name="email" placeholder="Введите email или телефон">
                            </div>

                            <div class="py-3 px-5">
                                <input type="submit" class="btn fe-btn w-100 text-uppercase" value="Отправить">
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
