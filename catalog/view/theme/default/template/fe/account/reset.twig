{{ header }}

<div id="account-reset" class="container" style="height: 75vh;">
    <div class="row">
        <div id="content" class="py-3">
            <h4>Сброс пароля</h4>
            <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                <fieldset>
                    <div class="form-group py-3">
                        <label class="col-sm-2 control-label" for="input-password">Новый пароль</label>
                        <div class="col-sm-10">
                            <input type="password" name="password" value="" id="input-password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group py-3">
                        <label class="col-sm-2 control-label" for="input-confirm">Подтвердить пароль</label>
                        <div class="col-sm-10">
                            <input type="password" name="confirm" value="" id="input-confirm" class="form-control" />
                        </div>
                    </div>
                </fieldset>
                <div class="py-3">
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{ footer }}
